{
  "eslint.nodePath": "./node_modules",
  "eslint.run": "onSave",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ]
}
